<%= render "layouts/user_header" %>

<h2>プロフィール編集</h2>

<%= form_with model: @user do |f| %>
<div class="field">
  <%= f.label :handle, "ハンドルネーム" %>
  <%= f.text_field :handle, autofocus: true, autocomplete: "handle" %>
</div>
  <h4>画像</h4>
  <%= f.file_field :image, accept: "image/*" %>
<%= f.submit "編集内容を保存" %>
<% end %>