<div class="container mt-4">
  <h2>検索結果</h2>
  <% if @range == "タイトル" %>
    <table class="table table-striped table-hover">
      <thead class="thead-dark">
        <tr>
          <th>ユーザー</th>
          <th>タイトル</th>
          <th>内容</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= link_to post.user.handle, user_path(post.user) %></td>
            <td><%= link_to post.title, post_path(post) %></td>
            <td><%= link_to post.content.truncate(50), post_path(post) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <table class="table table-striped table-hover">
      <thead class="thead-dark">
        <tr>
          <th>ユーザー</th>
          <th>タイトル</th>
          <th>内容</th>
        </tr>
      </thead>
      <tbody>
        <% @comments.each do |comment| %>
          <tr>
            <td><%= link_to comment.user.handle, user_path(comment.user) %></td>
            <td><%= link_to comment.post.title, post_path(comment.post) %></td>
            <td><%= link_to comment.content.truncate(50), post_path(comment.post) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>