<h2>Results index</h2>

<table class="table table-hover table-inverse">
  <% if @range == "Post" %>
    <tbody>
      <% @users.each do |post| %>
        <tr>
          <td><%= post.title %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <tbody>
      <% @comments.each do |comment| %>
        <tr>
          <td><%= comment.content %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>