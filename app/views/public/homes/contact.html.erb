<%= render "layouts/user_header" %>
<body>
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">お問い合わせはこちら</h5>
            <form action="https://api.staticforms.xyz/submit" method="post">
              <input type="hidden" name="accessKey" value="cb6c9114-cb2b-4a02-8b50-8a69dafa2ab0">
              <input type="hidden" name="subject" value="Test">
              <div class="form-group">
                <label for="name">名前</label>
                <input type="text" class="form-control" id="name" name="name">
              </div>
              <div class="form-group">
                <label for="email">メールアドレス</label>
                <input type="email" class="form-control" id="email" name="email">
              </div>
              <div class="form-group">
                <label for="question">ご質問</label>
                <textarea class="form-control" id="question" name="question" rows="3" placeholder="ご質問はこちらから"></textarea>
              </div>
              <button type="submit" class="btn btn-primary">送信</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
