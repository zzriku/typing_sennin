<div class="mb-8 text-center">
  <span class="text-3xl font-bold">
    ユーザー一覧
  </span>
</div>

<div class="container mb-4">
  <div class="row justify-content-center">
    <div class="col-12">
      <h1 class="text-center display-4 font-weight-bold mb-4">Customers</h1>
    </div>
    <div class="col-12">
      <div class="card rounded-3xl border-0">
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-bordered mb-0">
              <thead>
                <tr>
                  <th class="px-6 py-3 font-weight-bold text-left text-uppercase border-0">Name</th>
                  <th class="px-6 py-3 font-weight-bold text-left text-uppercase border-0">Email</th>
                  <th class="px-6 py-3 font-weight-bold text-center text-uppercase border-0">Status</th>
                  <th class="px-6 py-3 font-weight-bold text-center text-uppercase border-0">Previous Orders</th>
                  <th class="px-6 py-3 font-weight-semibold text-capitalize border-0"></th>
                </tr>
              </thead>
              <tbody>
                <% @users.each do |user| %>
                  <tr>
                    <td class="p-2 align-middle"><%= user.handle %></td>
                    <td class="p-2 align-middle"><%= user.email %></td>
                    <td class="p-2 text-center align-middle">
                      <% if user.status === "normal" %>
                        <span class="badge bg-primary text-white">Normal</span>
                      <% else %>
                        <span class="badge bg-danger text-white">Banned</span>
                      <% end %>
                    </td>
                    <td class="p-2 text-center align-middle"><%= user.orders.size %></td>
                    <td class="p-2 align-middle">
                      <%= link_to admin_user_path(user), class: "text-muted" do %>
                        詳細
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>